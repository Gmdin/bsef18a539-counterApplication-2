<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="337dp"
        android:layout_height="66dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="36dp"
        android:text="Counter Application Mobile Computing"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="36dp" />

    <Button
        android:id="@+id/btnDec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="45dp"
        android:background="#D2758283"
        android:capitalize="characters"
        android:shadowColor="#283593"
        android:text=" Decrement - "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDec2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnInc1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        android:layout_marginBottom="45dp"
        android:background="#D2758283"
        android:capitalize="none"
        android:shadowColor="#283593"
        android:text=" Increment + "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#00000000"
        android:textColorHint="#00000000"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/btnInc2"
        app:layout_constraintEnd_toStartOf="@+id/btnDec1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="49dp"
        android:background="#D2758283"
        android:capitalize="characters"
        android:shadowColor="#283593"
        android:text=" Increment + "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/btnInc3"
        app:layout_constraintEnd_toStartOf="@+id/btnDec2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/btnInc1" />

    <Button
        android:id="@+id/btnDec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="49dp"
        android:background="#D2758283"
        android:capitalize="characters"
        android:shadowColor="#283593"
        android:text=" Decrement - "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toTopOf="@+id/btnDec3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnInc2"
        app:layout_constraintTop_toBottomOf="@+id/btnDec1" />

    <Button
        android:id="@+id/btnInc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="55dp"
        android:background="#D2758283"
        android:capitalize="characters"
        android:shadowColor="#283593"
        android:text=" Increment + "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDec3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/editText4"
        app:layout_constraintTop_toBottomOf="@+id/btnInc2" />

    <Button
        android:id="@+id/btnDec3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="55dp"
        android:background="#D2758283"
        android:capitalize="characters"
        android:shadowColor="#283593"
        android:text=" Decrement - "
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal|bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnInc3"
        app:layout_constraintTop_toBottomOf="@+id/btnDec2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="342dp"
        android:layout_marginBottom="46dp"
        android:background="#F9A825"
        android:backgroundTint="#F9A825"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Zero"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#C62828"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editText3"
        app:layout_constraintEnd_toStartOf="@+id/btnInc1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="43dp"
        android:background="#F9A825"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Zero"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/editText4"
        app:layout_constraintEnd_toStartOf="@+id/btnInc2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="54dp"
        android:background="#F9A825"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Zero"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#C62828"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnInc3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="103dp"
        app:layout_constraintBottom_toTopOf="@+id/btnInc1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/iconandroidstudio" />
</androidx.constraintlayout.widget.ConstraintLayout>